{
	"manifest_version": 2,

	"name": "Bing Background",
	"description": "Display home and new tab background with bing background",
	"version": "1.0",

	"chrome_url_overrides": {
		"newtab": "index.html"
	},
	
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"icons": {
	  "200": "icon.png",
	  "128": "icon.png",
		"19": "icon.png"
	},

	"incognito": "split",

	"permissions": [
		"storage",
		"<all_urls>"
	],

	"background": {
	    "scripts": ["js/popup.js"],
	    "persistent": false
  	}
  	
}
